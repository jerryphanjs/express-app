extends ../layouts/common
block content
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger= error
  form(method="POST", action="/users/create")
    div.form-group
      label(for="name") Name
      input.form-control(type="text" name="name" id="name" value=values ? values.name : '')
    div.form-group
      label(for="phone") Phone
      input.form-control(type="text", name="phone", id="phone" value=values ? values.phone : '')  
    button.btn.btn-success Submit